    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="110dp"
        android:layout_marginRight="90dp"
        android:clickable="true"
        android:src="@drawable/wallet"
        android:tooltipText=" "
        app:backgroundTint="#FEFEFE" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="90dp"
        android:clickable="true"
        android:src="@drawable/user_plus"
        android:tooltipText=" "
        app:backgroundTint="#FEFEFE" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foregroundTint="#6496E6"
        android:src="@drawable/plus"
        android:tint="#6496E6"
        android:tooltipText="Add Expenses"
        android:translationZ="220dp"
        app:backgroundTint="#6496E6" />

    <com.google.android.material.tabs.TabLayout
        android:id='@+id/tablayout'
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:translationY="300dp"
        android:translationZ="101dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id='@+id/viewpager'
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="1dp">

    </androidx.viewpager2.widget.ViewPager2>


    <ImageView
        android:id="@+id/circlebg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="cricle"
        android:src="@drawable/whitecircle"
        android:tooltipText="Hellos"
        android:translationY="50dp" />

    <ImageView
        android:id="@+id/ham"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:contentDescription="cricle"
        android:src="@drawable/hamburger" />

    <TextView
        android:id="@+id/FirstLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:text="R"
        android:textSize="48sp"
        android:tooltipText="Hellos"
        android:translationY="63dp" />
    <ImageView

        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-90dp"
        android:contentDescription="logo"
        android:src="@drawable/_artboard_1border"
        android:translationX="-3dp"
        android:translationY="53dp" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="CircleCut"
        android:textColor="#F3F3F3"
        android:textSize="23sp"
        android:translationX="150dp"
        android:translationY="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationX="50dp"
        android:translationY="190dp"
        android:translationZ="10000dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="You are owed"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="0 $"

                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/line7"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTintMode="add"
            android:contentDescription="rect"
            android:src="@drawable/rectangle"
            android:translationZ="10000dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="You Owe"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="0 $"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/line6"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:backgroundTintMode="add"
            android:contentDescription="rect"
            android:src="@drawable/rectangle"
            android:translationZ="10000dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat"
                android:text="Total Balance"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="0 $"

                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/rectcard1bg"
        android:layout_width="500dp"
        android:layout_height="700dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="rect"
        android:src="@drawable/rectangle1"
        android:translationY="300dp" />

    <ImageView
        android:id="@+id/rectcard2bg"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="rect"
        android:src="@drawable/rectangle"
        android:translationY="180dp"
        android:translationZ="100dp" />

</RelativeLayout>