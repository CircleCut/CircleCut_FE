<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#FFFFFF"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationX="100dp"
        android:translationY="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"
            android:padding="0dp">

            <TextView
                android:id="@+id/senderletter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="A"
                android:textColor="#FA3D3D"
                android:textSize="24sp"
                android:translationX="22dp"
                android:translationY="15dp"
                android:translationZ="10dp" />

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/whitecircle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:rotation="180"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_back" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:backgroundTint="#FFFFFF"
            android:padding="0dp">

            <TextView
                android:id="@+id/reciverletter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="R"
                android:textColor="#7BF426"
                android:textSize="24sp"
                android:translationX="22dp"
                android:translationY="15dp"
                android:translationZ="10dp" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/whitecircle" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/circlebg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="cricle"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/swalT"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="270dp"
        android:text="0x00000000219ab540356cbb839cbe05303d7705fa"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/rwalT"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="270dp"
        android:layout_marginRight="85dp"
        android:text="0x00000000219ab540356cbb839cbe05303d7705fa"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/montserrat"
        android:text="Settle Up"
        android:textSize="20sp"
        android:translationX="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationX="85dp"
        android:translationY="150dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="You owe"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/reciver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Romario"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="500$"
            android:textColor="#FF3838"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/settleButton"
        android:layout_width="210dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:backgroundTint="#9EDDFF"
        android:fontFamily="@font/lato"
        android:padding="10dp"
        android:text="Settle Up"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:translationX="100dp"
        android:translationY="330dp" />
</RelativeLayout>