<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_login.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <ImageView
        android:id="@+id/circlebg"
        android:layout_width="500dp"

        android:layout_height="900dp"
        android:layout_marginTop="-359dp"
        android:contentDescription="cricle"
        android:src="@drawable/circle" />

    <ImageView
        android:id="@+id/rectbg"
        android:layout_width="500dp"

        android:layout_height="900dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-800dp"
        android:contentDescription="rect"
        android:src="@drawable/button" />

    <ImageView

        android:id="@+id/logoImageView"
        android:layout_width="327dp"
        android:layout_height="288dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-90dp"
        android:contentDescription="logo"
        android:src="@drawable/_artboard_1border"
        android:translationY="70dp" />


    <Button
        android:id="@+id/logInButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/logoImageView"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/button"
        android:backgroundTint="#6499E9"
        android:fontFamily="@font/lato"
        android:padding="10dp"
        android:text="login"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/logoImageView"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:background="@drawable/button"
        android:backgroundTint="#9EDDFF"
        android:fontFamily="@font/lato"
        android:padding="10dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="true"
        android:fontFamily="@font/montserrat"
        android:text="CircleCut"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:translationY="190dp" />

</RelativeLayout>
